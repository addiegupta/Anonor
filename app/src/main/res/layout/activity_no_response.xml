<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.talktime.ui.NoResponseActivity">

    <TextView
        android:id="@+id/tv_no_response_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="158dp"
        android:gravity="center_horizontal"
        android:text="@string/no_response_message"
        android:textAppearance="@style/Widget.AppCompat.ActionBar.Solid"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_try_again_call"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="112dp"
        android:text="@string/try_again"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="@+id/tv_no_response_message"
        app:layout_constraintRight_toRightOf="@+id/tv_no_response_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_response_message" />
</android.support.constraint.ConstraintLayout>
